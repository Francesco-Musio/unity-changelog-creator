{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["es2017"],
        "esModuleInterop": false,
        "rootDir": ".",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true
    },
    "include": ["./src/**/*.ts", "modules.d.ts"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
